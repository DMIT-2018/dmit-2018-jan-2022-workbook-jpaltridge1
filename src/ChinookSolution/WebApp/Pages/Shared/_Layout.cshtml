<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/holiday.css@0.9.8" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    
    <!--
        RenderSection is a way of allowing statements/cose/tags to be placed in a certain area of the layout
        By default this is a required entry on each Content page. using required: false makes this an opptional
        entry on any Content page.
        If they section is used on a Content page then the code within the section reference on the Content page 
        is merged in place here on the layout page.
    -->
    @RenderSection("CustomCSS", required: false)
</head>
<body>
    
    <header>
        <nav>           
            <ul>
                <li>
                    <a asp-area="" asp-page="/Index"><img src="~/img/ChinookMusicMenuLogo.jpg" alt="chinook logo" title="Go to Home"></a>
                </li>
                <li>
                    <a asp-area="" asp-page="/Index">Home</a>
                </li>
                @*
                    setup a sub-menu (drop-down menu) using holiday.css see holidaycss.js.org
                    start with an li tag
                    add a span tag: entry on root menu
                    add a ul tag: starts dropdown menu
                    add any number of li and a tags: sub menu item entry
                *@
                <li>
                    <span>Samples</span>
                    <ul>
                        <li>
                            <a asp-area="" asp-page="/SamplePages/Basics">Basics</a>
                        </li>
                        <li>
                            <a asp-area="" asp-page="/SamplePages/Controls">Controls</a>
                        </li>
                    </ul>
                </li>


                <li>
                    <a asp-area="" asp-page="/Privacy">Privacy</a>
                </li>
                <partial name="_LoginPartial" />
           </ul>
        </nav>
    </header>

    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div>
            &copy; 2022 - Jeff Paltridge 2022 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
  
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>